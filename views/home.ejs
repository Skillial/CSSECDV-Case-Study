<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Occasio</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
</head>
<body class="bg-white text-gray-800 font-sans">
    <%- include('component/navbar') %>

    <!-- Search Bar -->
    <div class="flex justify-center px-6 py-4">
        <div class="flex gap-2 bg-white border border-gray-300 rounded-full shadow-sm px-4 py-2 w-full max-w-4xl items-center">
            <input type="text" placeholder="Search products..." class="flex-1 outline-none placeholder-gray-500 text-sm px-2" />
            <button class="p-2 rounded-full text-gray-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.9 14.32a8 8 0 111.414-1.414l4.387 4.387a1 1 0 01-1.414 1.414l-4.387-4.387zM8 14a6 6 0 100-12 6 6 0 000 12z" clip-rule="evenodd" />
                </svg>
            </button>
        </div>
    </div>

    <!-- Category Filters -->
    <div class="flex justify-center px-6 py-4 text-sm text-gray-500 border-b">
        <div class="flex flex-wrap gap-10 justify-center">
            <div class="flex flex-col items-center group cursor-pointer">
                <span>
                    <i class="fa fa-couch text-2xl transition-transform duration-200 group-hover:scale-110 group-hover:text-gray-600"></i>
                </span>
                <span class="text-sm transition-colors duration-200 group-hover:text-gray-600">
                    Living Room
                </span>
            </div>


            <div class="flex flex-col items-center group cursor-pointer">
                <span>
                <!-- Bedroom Icon -->
                    <i class="fa fa-bed text-2xl transition-transform duration-200 group-hover:scale-110 group-hover:text-gray-600"></i>
                </span>
                <span class="text-sm transition-colors duration-200 group-hover:text-gray-600">Bedroom</span>
            </div>

            <div class="flex flex-col items-center group cursor-pointer">
                <span>
                <!-- Dining Room Icon -->
                    <i class="fa fa-utensils text-2xl transition-transform duration-200 group-hover:scale-110 group-hover:text-gray-600"></i>
                </span>
                <span class="text-sm transition-colors duration-200 group-hover:text-gray-600">Dining Room</span>
            </div>

            <div class="flex flex-col items-center group cursor-pointer">
                <span>
                <!-- Office Icon -->
                    <i class="fa fa-briefcase text-2xl transition-transform duration-200 group-hover:scale-110 group-hover:text-gray-600"></i>
                </span>
                <span class="text-sm transition-colors duration-200 group-hover:text-gray-600">Office</span>
            </div>

            <div class="flex flex-col items-center group cursor-pointer">
                <span>
                <!-- Outdoor Icon (Tree/Patio) -->
                    <i class="fa fa-tree text-2xl transition-transform duration-200 group-hover:scale-110 group-hover:text-gray-600"></i>
                </span>
                <span class="text-sm transition-colors duration-200 group-hover:text-gray-600">Outdoor</span>
            </div>

            <div class="flex flex-col items-center group cursor-pointer">
                <span>
                <!-- Storage Icon (Box) -->
                    <i class="fa-solid fa-boxes-stacked text-2xl transition-transform duration-200 group-hover:scale-110 group-hover:text-gray-600"></i>
                </span>
                <span class="text-sm transition-colors duration-200 group-hover:text-gray-600">Storage</span>
            </div>

            <div class="flex flex-col items-center group cursor-pointer">
                <span>
                <!-- Children's Icon (Toy Block) -->
                    <i class="fa-solid fa-shapes text-2xl transition-transform duration-200 group-hover:scale-110 group-hover:text-gray-600"></i>
                </span>
                <span class="text-sm transition-colors duration-200 group-hover:text-gray-600">Children's</span>
            </div>

            <div class="flex flex-col items-center group cursor-pointer">
                <span>
                <!-- Entryway Icon (Door) -->
                    <i class="fa-solid fa-dungeon text-2xl transition-transform duration-200 group-hover:scale-110 group-hover:text-gray-600"></i>
                </span>
                <span class="text-sm transition-colors duration-200 group-hover:text-gray-600">Entryway</span>
            </div>

            <div class="flex flex-col items-center group cursor-pointer">
                <span>
                <!-- Accent Icon (Sparkle) -->
                    <i class="fa-solid fa-star text-2xl transition-transform duration-200 group-hover:scale-110 group-hover:text-gray-600"></i>
                </span>
                <span class="text-sm transition-colors duration-200 group-hover:text-gray-600">Accent</span>
            </div>

            <div class="flex flex-col items-center group cursor-pointer">
                <span>
                <!-- Modular Icon (Transform/Expand) -->
                    <i class="fa-solid fa-dolly text-2xl transition-transform duration-200 group-hover:scale-110 group-hover:text-gray-600"></i>
                </span>
                <span class="text-sm transition-colors duration-200 group-hover:text-gray-600">Modular</span>
            </div>
        </div>
    </div>

    <!-- Cards Section -->
    <div class="px-6 py-6">
        <div class="flex justify-center gap-4 flex-wrap">
            <!-- Card 1 -->
            <div class="w-[250px] rounded-xl overflow-hidden shadow-sm bg-white">
                <img src="https://via.placeholder.com/250x150?text=Inside+Out+2" class="w-full h-40 object-cover" />
                <div class="p-4">
                    <p class="text-sm font-medium">Product</p>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="w-[250px] rounded-xl overflow-hidden shadow-sm bg-white">
                <img src="https://via.placeholder.com/250x150?text=Purple+Rain" class="w-full h-40 object-cover" />
                <div class="p-4">
                    <p class="text-sm font-medium">Product</p>
                    <p class="text-xs text-gray-500">Hosted by Wendy and Lisa</p>
                    <p class="text-xs text-gray-500">Coming August</p>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="w-[250px] rounded-xl overflow-hidden shadow-sm bg-white">
                <img src="https://via.placeholder.com/250x150?text=Kevin+Hart" class="w-full h-40 object-cover" />
                <div class="p-4">
                    <p class="text-sm font-medium">Product</p>
                    <p class="text-xs text-gray-500">Hosted by Kevin Hart</p>
                    <p class="text-xs text-gray-500">Coming August</p>
                </div>
            </div>

            <!-- Card 4 -->
            <div class="w-[250px] rounded-xl overflow-hidden shadow-sm bg-white">
                <img src="https://via.placeholder.com/250x150?text=Doja+Cat" class="w-full h-40 object-cover" />
                <div class="p-4">
                    <p class="text-sm font-medium">Product</p>
                    <p class="text-xs text-gray-500">Hosted by Doja Cat</p>
                    <p class="text-xs text-gray-500">Coming October</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
